subr int syracuse(int number) {
	if((number / 2)*2 == number) {
		return number / 2;
	} 
	else {
		return 3 * number + 1;
	}
}

subr void sequence(int startingNumber) {
	print \n;
	
	var num := startingNumber;
	while (num > 1) {
		print num \s;
		num := syracuse(num);
	}
	print num \n;
	return;
}

main {
    call sequence(10);
    
	print "done." \n;
}
