main {
    # Test 1: Declare a char variable with a simple printable ASCII character
    var cone := 'a';
    print cone;
    print \n;

    # Expected output:
    # a

    #==================================================================

    # Test 2: Declare a char variable with octal numeric code
    var ctwo := %124;
    print ctwo;
    print \n;

    # Expected output:
    # T

    #==================================================================

    # Test 3: Re-assignment of char variable (printable ASCII -> printable ASCII)
    var cthree := 'Z';
    print cthree;
    print \n;

    cthree := '^';
    print cthree;
    print \n;

    # Expected output:
    # Z
    # ^

    #==================================================================

    # Test 4: Re-assignment of char variable (octal code -> octal code)
    var cfour := %133;
    print cfour;
    print \n;

    cfour := %176;
    print cfour;
    print \n;

    # Expected output:
    # [
    # ~

    #==================================================================

    # Test 5: Declare a const char variable
    const cfive := '=';
    print cfive;
    print \n;

    const csix := 'H';
    print csix;
    print \n;

    # Expected output:
    # =
    # H

    #==================================================================

    # Test 6: Re-assignment of char variable (printable ASCII -> octal code)
    var cseven := 'w';
    print cseven;
    print \n;

    cseven := %047;
    print cseven;
    print \n;

    # Expected output:
    # w
    # '

    #==================================================================

    # Test 7: Re-assignment of char variable (octal code -> printable ASCII)
    var ceight := %062;
    print ceight;
    print \n;

    ceight := '<';
    print ceight;
    print \n;

    # Expected output:
    # 2
    # <
}