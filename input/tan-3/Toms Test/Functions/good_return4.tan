subr bool holler (int number){
	print number \s isOdd(number) \s ;
	return !isOdd(number);
}
subr bool isOdd(int number) {
	return number != (number / 2) * 2;
}

main {
	const max := 6;
	
	var count := 0;
	while (count <= max) {
		var result := holler(count);
		print result \n;
		count := count + 1;
	}
	
	print max*max \s isOdd(max*max) \n;
	
	print "all done." \n;
}
